#!/usr/bin/env ruby
require_relative('../lib/player')
require_relative('../lib/game')

puts 'Welcome to Tic Tac Toa game'

puts '|1| |2| |3|'
puts '------------'
puts '|4| |5| |6|'
puts '------------'
puts '|7| |8| |9|'

pl = Player.new
#-------Player 1 Information------
puts 'Player 1 Enter Your Name'
pl.player_name(gets.chop.strip)
puts "Player One Your Name is #{pl.get_player_name(0)}"
puts 'Player One Select Symbol X or Y'
if pl.player_symbol?(gets.chop.strip)
  puts "Player One Your  Selected Symbol is #{pl.get_player_symbol('pl1')}"
else
  loop do
    puts 'Please Player One Select Symbol X or Y Choices Only'
    if pl.player_symbol?(gets.chop.strip)
      puts "Player One Your  Selected Symbol is #{pl.get_player_symbol('pl1')}"
      break
    end
  end
end

#-------Player 2 Information------
puts 'Player 2 Enter Your Name'
pl.player_name(gets.chop.strip)
puts "Player two Your Name is #{pl.get_player_name(1)}"
puts "#{pl.get_player_name(1)} Your Symbol is #{pl.get_player_symbol('pl2')}"
puts "#{pl.get_player_name(0)} will play with #{pl.get_player_name(1)}"

# Game
gm = Game.new
loop do
  puts "#{pl.get_player_name(1)}, It is Your Turn,  Please Select Position"
  pos_move = gets.chop.strip.to_i
  if gm.validate_pos?(pos_move)
    gm.update_board(pl.get_player_symbol('pl1'), pos_move)
    break
  else
    puts 'invalid pos'
  end
end
